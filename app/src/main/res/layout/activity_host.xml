<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.HostActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/purple_700"
        app:cardBackgroundColor="@color/purple_500"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/agenda"
                android:drawablePadding="10dp"
                android:drawableTint="@color/purple_200"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Meeting Agenda"
                android:inputType="textPersonName"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/date"
                android:drawablePadding="10dp"
                android:drawableTint="@color/purple_200"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Meeting Date"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/time"
                android:drawablePadding="10dp"
                android:drawableTint="@color/purple_200"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Meeting Time"
                android:inputType="time"
                android:paddingLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:hint="Share Code"
                    android:padding="10dp"
                    android:text="Meeting Code"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textIsSelectable="true" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/purple_200"
                    android:baselineAlignBottom="false"
                    android:clickable="true"
                    android:tint="@color/white"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/share" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/meet_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:backgroundTint="#4CAF50"
                    android:drawableTint="@color/white"
                    android:text="Meet Now" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="#4CAF50"
                    android:progressBackgroundTint="#4CAF50"
                    android:progressTint="#4CAF50"
                    android:secondaryProgressTint="#8BC34A" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/meet_later"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button"
                    android:text="SCHEDULE MEET" />

                <ProgressBar
                    android:id="@+id/progressBar3"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/purple_700"
                    android:progressBackgroundTint="@color/purple_700"
                    android:progressTint="@color/purple_500"
                    android:secondaryProgressTint="@color/purple_200" />

            </TableRow>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>