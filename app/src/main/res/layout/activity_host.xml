<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.HostActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/schedule" />

        <EditText
            android:id="@+id/agenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/agenda"
            android:drawablePadding="10dp"
            android:drawableTint="@color/purple_200"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Meeting Agenda"
            android:inputType="textPersonName"
            android:lines="1"
            android:paddingStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/date"
            android:drawablePadding="10dp"
            android:drawableTint="@color/purple_200"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Meeting Date"
            android:inputType="date"
            android:paddingStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/time"
            android:drawablePadding="10dp"
            android:drawableTint="@color/purple_200"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Meeting Time"
            android:inputType="time"
            android:paddingStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:paddingStart="20dp"
            android:text="Meeting Code: "
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:hint="Share Code"
                android:padding="10dp"
                android:text="Meeting Code"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textIsSelectable="true" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/purple_700"
                android:baselineAlignBottom="false"
                android:clickable="true"
                android:tint="@color/white"
                app:fabSize="mini"
                app:srcCompat="@drawable/share" />

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="monospace"
            android:text="Share Meeting Code for Others to Join"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/meet_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:backgroundTint="#4CAF50"
                    android:drawableTint="@color/white"
                    android:fontFamily="monospace"
                    android:text="Meet Now"
                    android:textColor="@color/white" />

                <ProgressBar
                    android:id="@+id/meetProgress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:indeterminateTint="#4CAF50"
                    android:progressBackgroundTint="#4CAF50"
                    android:progressTint="#4CAF50"
                    android:secondaryProgressTint="#8BC34A" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/meet_later"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button"
                    android:fontFamily="monospace"
                    android:text="SCHEDULE MEET"
                    android:textColor="@color/white" />

                <ProgressBar
                    android:id="@+id/scheduleProgress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/purple_700"
                    android:progressBackgroundTint="@color/purple_700"
                    android:progressTint="@color/purple_500"
                    android:secondaryProgressTint="@color/purple_200" />

            </TableRow>
        </TableRow>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>